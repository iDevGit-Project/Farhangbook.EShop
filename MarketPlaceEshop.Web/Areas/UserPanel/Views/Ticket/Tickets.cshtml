@model MarketPlaceEshop.DataAccessLayer.DataTransferObjectDTOs.Contact.DTO_FilterTicket
@using MarketPlaceEshop.Common.Extentions
@{
    ViewData["Title"] = "تیکت ها";
    Layout = "~/Areas/UserPanel/Views/Shared/_UserPanelLayout.cshtml";
}

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AuthenticationCaptchaScripts" />

}

<!-- BEGIN HEADER -->
<div class="page-header navbar navbar-fixed-top">
    <!-- BEGIN HEADER INNER -->
    @await Component.InvokeAsync("UserPanel_TopBar")
    <!-- END HEADER INNER -->
</div>
<!-- END HEADER -->
<!-- BEGIN HEADER & CONTENT DIVIDER -->
<div class="clearfix"> </div>
<!-- END HEADER & CONTENT DIVIDER -->
<!-- BEGIN CONTAINER -->
<div class="page-container">

    <!-- BEGIN SIDEBAR -->
    <div class="page-sidebar-wrapper">
        <!-- BEGIN SIDEBAR -->
        @await Component.InvokeAsync("UserPanel_SideBar")
        <!-- END SIDEBAR -->
    </div>
    <!-- END SIDEBAR -->
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <!-- BEGIN PAGE HEAD-->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">

                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a role="button">تنظیمات کاربری</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a role="button">مدیریت تیکت ها</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span class="active">مشاهده تیکت ها</span>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- BEGIN PAGE BASE CONTENT -->
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="portlet light bordered">
                                    <div class="portlet-title tabbable-line">
                                        <div class="caption caption-md">
                                            <span class="caption-subject font-green-sharp bold uppercase">مشاهده تیکت ها</span>
                                        </div>
                                        <div class="actions">
                                            <a href="/userpanel" role="button" class="btn dark btn-outline"> بازگشت </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table-responsive">
                                            @if (Model.Tickets != null && Model.Tickets.Any())
                                            {
                                                <table class="table table-striped table-bordered table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th> کد تیکت </th>
                                                            <th> عنوان تیکت </th>
                                                            <th> وضعیت </th>
                                                            <th> دستورات </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var ticket in Model.Tickets)
                                                        {
                                                            <tr>
                                                                <td> @ticket.Id </td>
                                                                <td> @ticket.Title </td>
                                                                <td>
                                                                    <span class="label label-info"> @ticket.TicketState.GetEnumName() </span>
                                                                </td>
                                                                <td><a href="#" class="View">نمایش جزئیات</a></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            else
                                            {
                                                <partial name="_SiteNotFoundAnyItems" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END CONTAINER -->
    </div>
</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<div class="page-footer">
    <div class="page-footer-inner">
        1399-2021 © فروشگاه اینترنتی کتاب فرهنگ بوک &nbsp;|&nbsp;
        <a target="_blank" href="http://www.webnext.ir">توسعه و پشتیبانی</a>
    </div>
    <div class="scroll-to-top">
        <i class="icon-arrow-up"></i>
    </div>
</div>
<!-- END FOOTER

