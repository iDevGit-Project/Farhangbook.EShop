@model MarketPlaceEshop.DataAccessLayer.DataTransferObjectDTOs.Account.DTO_ChangePassword
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AuthenticationCaptchaScripts" />
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- forgot password start -->
            <section class="row flexbox-container">
                <div class="col-xl-7 col-md-9 col-10  px-0">
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left section-forgot password -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                    <div class="card-content">
                                        <div class="card-body">
                                            <div class="divider">
                                                <div class="divider-text text-uppercase text-muted">
                                                    <small>تغییر کلمه عبور</small>
                                                </div>
                                            </div>
                                            <form asp-area="UserPanel" asp-controller="Account" asp-action="ChangePassword">
                                                @*<partial name="_AuthenticationCaptchaInput" />*@

                                                <div class="form-row">
                                                    <div class="form-group col-md-12 mb-50">
                                                        <label class="text-bold-700">کلمه عبور فعلی</label>
                                                        <input type="text" asp-for="CurrentPassword" class="form-control text-left" autofocus="autofocus" dir="ltr">
                                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                                    </div>
                                                    <hr>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">کلمه عبور جدید</label>
                                                        <input type="password" asp-for="NewPassword" class="form-control text-left" dir="ltr">
                                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700"> تکرار کلمه عبور جدید</label>
                                                        <input type="password" asp-for="ConfirmNewPassword" class="form-control text-left" dir="ltr">
                                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary glow w-100 position-relative"> تغییر کلمه عبور <i id="icon-arrow" class="bx bx-"></i></button>
                                            </form>
                                            <hr>
                                        </div>
                                        <div class="form-group align-items-center mb-2">
                                            <div class="text-center">
                                                <div class="ml-3 ml-md-2 mr-1"><a href="/" class="card-link btn btn-outline-primary text-nowrap">بازگشت به صفحه اصلی</a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- right section image -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                <div class="card-content">
                                    <img class="img-fluid" src="/authentication/assets/images/pages/lock-screen.png" alt="تغییر کلمه عبور">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- forgot password ends -->
        </div>
    </div>
</div>
<!-- END: Content-->
