@model MarketPlaceEshop.DataAccessLayer.DataTransferObjectDTOs.Account.DTO_ForgotPassword
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AuthenticationCaptchaScripts" />
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- forgot password start -->
            <section class="row flexbox-container">
                <div class="col-xl-7 col-md-9 col-10  px-0">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        کاربرگرامی : ممکن است به دلیل <strong>(حجم بالای ترافیک مخابرات)</strong> پیامک <strong> رمز عبور جدید </strong> با تأخیر برای شما ارسال شود!
                    </div>
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left section-forgot password -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                    <div class="card-content">
                                        <div class="card-body">
                                            <div class="divider">
                                                <div class="divider-text text-uppercase text-muted">
                                                    <small>بازیابی کلمه عبور</small>
                                                </div>
                                            </div>
                                            <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                                                <partial name="_AuthenticationCaptchaInput" />

                                                <div class="form-group mb-2">
                                                    <label class="text-bold-700">شماره همراه خود را وارد نمایید.</label>
                                                    <input type="text" asp-for="Mobile" class="form-control text-left" autofocus="autofocus" dir="ltr">
                                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                                </div>
                                                <div class="form-group d-flex flex-md-row flex-column justify-content-between align-items-center">
                                                    <div class="text-left">
                                                        <div class="text-right line-height-2"><a asp-controller="Account" asp-action="Login" class="card-link"><small style="border-bottom: 1px dashed #197ae3;">ورود به حساب کاربری</small></a></div>
                                                    </div>
                                                    <div class="text-right line-height-2"><a asp-controller="Account" asp-action="Register" class="card-link"><small style="border-bottom: 1px dashed #197ae3;">ثبت نام حساب کاربری جدید</small></a></div>
                                                </div>
                                                <button type="submit" class="btn btn-primary glow position-relative w-100">ارسال رمز عبور<i id="icon-arrow" class="bx bx-lock-open"></i></button>
                                            </form>
                                            <hr>
                                        </div>
                                        <div class="form-group align-items-center mb-2">
                                            <div class="text-center">
                                                <div class="ml-3 ml-md-2 mr-1"><a href="/" class="card-link btn btn-outline-primary text-nowrap">بازگشت به صفحه اصلی</a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- right section image -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                <div class="card-content">
                                    <img class="img-fluid" src="/authentication/assets/images/pages/not-authorized.png" alt="بازیابی کلمه عبور">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- forgot password ends -->
        </div>
    </div>
</div>
<!-- END: Content-->
