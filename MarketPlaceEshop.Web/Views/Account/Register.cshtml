@model MarketPlaceEshop.DataAccessLayer.DataTransferObjectDTOs.Account.DTO_RegisterUser
@{
    ViewData["Title"] = "ثبت نام حساب کاربری جدید";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AuthenticationCaptchaScripts" />
}

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- register section starts -->
            <section class="row flexbox-container">
                <div class="col-xl-8 col-10">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        کاربرگرامی: در صورت تأخیر در دریافت <strong> کد اعتبار سنجی </strong>،به مدت <strong>( حداکثر 120 ثانیه )</strong> منتظر بمانید.
                    </div>
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- register section left -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                    <div class="card-content">
                                        <div class="card-body">
                                            <div class="divider">
                                                <div class="divider-text text-uppercase text-muted">
                                                    <small>ساخت حساب کاربری جدید</small>
                                                </div>
                                            </div>
                                            <form method="post" asp-controller="Account" asp-action="Register">
                                                <partial name="_AuthenticationCaptchaInput" />

                                                <div class="form-row">
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">شماره همراه</label>
                                                        <input type="text" asp-for="Mobile" autofocus="autofocus" class="form-control text-left" dir="ltr">
                                                        <span asp-validation-for="Mobile" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">نام</label>
                                                        <input type="text" asp-for="FirstName" class="form-control">
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">نام خانوادگی</label>
                                                        <input type="text" asp-for="LastName" class="form-control">
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">آدرس ایمیل</label>
                                                        <input type="text" asp-for="Email" class="form-control">
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">کلمه عبور جدید</label>
                                                        <input type="password" asp-for="Password" class="form-control text-left" dir="ltr">
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700">تکرار کلمه عبور جدید</label>
                                                        <input type="password" asp-for="ConfirmPassword" class="form-control text-left" dir="ltr">
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary glow position-relative w-100 mt-ladda-btn ladda-button btn-circle" data-style="zoom-out">
                                                    ثبت نام <i id="icon-arrow" class="bx bx-save"></i>
                                                </button>
                                            </form>
                                            <hr>
                                            <div class="text-center"> <strong>حساب کاربری دارم!</strong><a href="/Login"><small style="border-bottom: 1px dashed #197ae3;"> ورود به حساب کاربری </small> </a></div>
                                        </div>
                                        <div class="form-group align-items-center mb-2">
                                            <div class="text-center">
                                                <div class="ml-3 ml-md-2 mr-1"><a href="/" class="card-link btn btn-outline-primary text-nowrap">بازگشت به صفحه اصلی</a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- image section right -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                <img class="img-fluid" src="/authentication/assets/images/pages/register.png" alt="branding logo">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- register section endss -->
        </div>
    </div>
</div>